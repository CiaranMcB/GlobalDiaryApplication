<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Calendar"
            android:textColor="@color/brown_main"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/splitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="........................................................."
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="normal"
        />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:dateTextAppearance="@style/Theme.AppTheme"
        android:weekDayTextAppearance="@style/Theme.AppTheme" />

    <TextView
        android:id="@+id/splitterBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="........................................................."
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="normal"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="3">

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/onpage_calendar"
            android:background="@null"
            android:layout_weight="1"
            android:id="@+id/calendar"
            ></ImageButton>
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_baseline_menu_book_24"
            android:background="@null"
            android:layout_weight="1"
            android:id="@+id/entryOverview"
            ></ImageButton>
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_baseline_note_alt_24"
            android:background="@null"
            android:layout_weight="1"
            android:id="@+id/writeEntry"
            ></ImageButton>
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_baseline_settings_24"
            android:background="@null"
            android:layout_weight="1"
            android:id="@+id/settings"
            ></ImageButton>

    </LinearLayout>

</LinearLayout>