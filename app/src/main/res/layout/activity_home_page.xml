<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homePage">

    <Button
        android:id="@+id/btn_make_entry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        style="@style/ButtonBordered"
        android:onClick="openMakeEntryActivity"
        android:text="Make a Diary Entry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.239"

        />

    <Button
        android:id="@+id/btn_view_entries"
        android:text="View Recent Entries"
        android:onClick="openViewEntriesActivity"
        style="@style/ButtonBordered"
        app:layout_constraintEnd_toEndOf="@+id/btn_make_entry"
        app:layout_constraintStart_toStartOf="@+id/btn_make_entry"
        app:layout_constraintTop_toBottomOf="@+id/btn_make_entry"
        android:minHeight="48dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        />

    <Button
        android:id="@+id/btn_view_calendar"
        android:text="View Calendar"
        android:onClick="openViewCalendarActivity"
        style="@style/ButtonBordered"
        app:layout_constraintEnd_toEndOf="@+id/btn_view_entries"
        app:layout_constraintStart_toStartOf="@+id/btn_view_entries"
        app:layout_constraintTop_toBottomOf="@+id/btn_view_entries"
        android:minHeight="48dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btn_user_manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ButtonBordered"
        android:text="User Manual"
        android:onClick="openUserManualActivity"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_view_calendar"
        app:layout_constraintStart_toStartOf="@+id/btn_view_calendar"
        app:layout_constraintTop_toBottomOf="@+id/btn_view_calendar"/>


</androidx.constraintlayout.widget.ConstraintLayout>