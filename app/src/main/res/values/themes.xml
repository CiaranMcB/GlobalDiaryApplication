<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GlobalDiaryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_main</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="fontFamily">@font/robotoregular</item>

    </style>
    <style name="Theme.AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/brown_main</item>
        <item name="colorPrimaryVariant">@color/brown_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="fontFamily">@font/robotoregular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Theme.AppTheme.Dark" parent="Theme.AppTheme">

        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtonBordered">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_bordered</item>
        <item name="android:insetLeft">15dp</item>
        <item name="android:insetRight">15dp</item>
        <item name="android:textColor">@color/brown_main</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ButtonBorderedNoPadding" parent="ButtonBordered">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>
</resources>